<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MaisonActivity">

    <TextView
            android:text="nomMaison"
            android:layout_width="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content" android:id="@+id/nom_maison"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="4dp"
            app:layout_constraintHorizontal_bias="0.341"/>
    <ImageButton
            android:background="#00FFFFFF"
            android:layout_width="38dp"
            android:onClick="suppMaison"
            android:layout_height="34dp" app:srcCompat="@drawable/poubelle" android:id="@+id/imageButton"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="4dp"
            app:layout_constraintHorizontal_bias="0.893" tools:ignore="OnClick"/>
    <ImageButton
            android:background="#00FFFFFF"
            android:layout_width="52dp"
            android:layout_height="47dp" app:srcCompat="@drawable/plus" android:id="@+id/imageButton2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="80dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.818"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="262dp"
            android:layout_height="61dp"
            app:layout_constraintEnd_toStartOf="@+id/imageButton2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.242" tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/nom_maison" android:layout_marginTop="36dp"/>
    <TextView
            android:text="nomPièce"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/nom_piece"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="140dp"
            app:layout_constraintHorizontal_bias="0.498"/>
    <TextView
            android:text="Aucune pièce disponible, vous pouvez en ajouter avec le +"
            android:layout_width="180dp"
            android:textColor="#10100F"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_height="61dp" android:id="@+id/textView5"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="72dp"
            app:layout_constraintHorizontal_bias="0.207"/>
    <ImageView
            android:background="#00FFFFFF"
            android:layout_width="124dp"
            android:layout_height="91dp" app:srcCompat="@drawable/bousole" android:id="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/nom_piece"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.477"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"/>

</androidx.constraintlayout.widget.ConstraintLayout>